<div class="form wrapper">
  <h1 class="title">編集画面</h1>
  <div class="form_post">
    <%= form_with model:@post, url: post_path, local:true do |f|%>
      <div class="field">
        <%= f.label :"タイトル" %><br />
        <%= f.text_field :title, autofocus: true, class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :"会社名" %><br />
        <%= f.text_field :company, autofocus: true, class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :"形式" %><br />
        <%= f.text_field :series, autofocus: true, class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :"路線名" %><br />
        <%= f.text_field :line, autofocus: true, class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :"編成" %><br />
        <%= f.text_field :car, autofocus: true, class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :"場所" %><br />
        <%= f.text_field :place, autofocus: true, class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :"本文" %><br />
        <%= f.text_area :body, class: "text_area" %>
      </div>
      <div class="field">
        <%= f.label :"撮影日時" %><br />
        <%= f.text_field :date, autofocus: true, class: "text_field" %>
      </div>
      <div class="field">
        <%= f.label :"画像" %><br />
        <%= f.attachment_field :images_images, multiple: true %>
      </div>
      <%= f.submit '訂正', class: "button" %>
    <% end %>
    <td><%= link_to "投稿詳細へ戻る", post_path, class: "btn btn-danger" %></td>
    <td><%= link_to "削除", post_path, method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure?' } %></td>
  </div>
</div>