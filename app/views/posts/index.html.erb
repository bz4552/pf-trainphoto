<div class="container bg-white my-4">
  <div class="row">
      <div class='col-md-3'>
      <h2>User info</h2>
      <%= link_to users_path(current_user) do %>
      <%= render 'users/info', user: current_user %>
      <% end %>
    </div>
    <div class="col-lg-8 text-center">
        <h2 class="text-center">投稿一覧</h2>
        <div class="row">
            <div class="container">
              <% @posts.each do |post| %>
          <% @post.images.each do |image| %>
            <%= attachment_image_tag image, :image, :fill, 250, 180 %>
            <%= link_to post_path(post) do %>
          <% end %>
        <p>会社名 : <%= post.company %></p>
        <p>形式 : <%= post.series %></p>
        <p>場所 : <%= post.place %></p>
     <% end %>
            </div>
        </div>
     </div>
     <% end %>
</div>
<%= paginate @posts %>
</div>