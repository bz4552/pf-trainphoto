<% if @post.images.present? %>
<% @post.images.each do |image| %>
<%= attachment_image_tag image, :image, :fill, 300, 300 %>
<% end %>
<% else %>
<%= image_tag 'no_image.jpg', size: '200x200' %>
<% end %>
<p>会社名 : <%= @post.company %></p>
<p>形式 : <%= @post.series %></p>
<p>路線名 : <%= @post.line %></p>
<p></p>
<p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>

<%= link_to "編集",edit_post_path(@post) %>
<%= link_to "削除",post_path(@post), method: :delete, data: { confirm: "削除してよろしいですか？" } %>

<div class="comments">
<p>コメント件数：<%= @post.comments.count %></p>
<% @post.comments.each do |comment| %>
  <p><%= image_tag(current_user) %></p>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %>
  <%= comment.body %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@post, @comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>

<% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorites_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>